<?xml version="1.0" encoding="UTF-8" ?>
<!-- /src/mapper/mybatis-config.xml -->
<!DOCTYPE configuration PUBLIC "-//mybatis.org/DTD config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
	<!-- 이미 컨넥션(연결된) 상태이고, 환경설정으로 맵퍼부분만 가지고 있는 xml -->
<configuration>
	<typeAliases>
		<typeAlias type="logic.Item" alias="Item" />
		<typeAlias type="logic.User" alias="User" />
		<typeAlias type="logic.Sale" alias="Sale" />
		<typeAlias type="logic.SaleItem" alias="SaleItem" />
		<typeAlias type="logic.Board" alias="Board" />
	</typeAliases>

	<mappers>
		<mapper resource="dao/mapper/Item.xml" />
		<mapper resource="dao/mapper/User.xml" />
		<mapper resource="dao/mapper/Sale.xml" />
		<mapper resource="dao/mapper/SaleItem.xml" />
		<mapper resource="dao/mapper/Board.xml" />
	</mappers>
</configuration>
